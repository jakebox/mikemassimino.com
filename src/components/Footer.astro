---
import Social from "./Social.astro";

const currentPath = Astro.url.pathname;

import { navigationLinks } from "../config/navigationLinks.mjs";

const year = new Date().getFullYear();
---

<footer class="border-t-4 border-t-dimmerwhite bg-gradient-to-l from-dimwhite to-dimmerwhite pl-6 pt-3 lg:px-24 lg:py-10">
  <!-- Navigation -->
  <div class="lg:flex lg:items-center lg:justify-between">
    <div class="lg:order-1 lg:flex-shrink-0 lg:basis-60">
      <h1 class="mb-2 font-jost font-semibold text-black lg:text-xl">Navigation</h1>
      <ul class="mr-32 flex flex-wrap gap-x-2 lg:mr-0 lg:flex-col lg:gap-y-1">
        {
          navigationLinks.map((page) => (
            <li
              class={
                currentPath === page[1] ? "max-w-fit bg-gradient-to-r from-orange to-red bg-[length:100%_3.5px] bg-bottom bg-no-repeat font-jost" : "font-jost"
              }
            >
              <a href={page[1]}>{page[0]}</a>
            </li>
          ))
        }
      </ul>
    </div>
    <!-- Socials -->
    <div class="lg:order-3 lg:flex-shrink-0 lg:basis-60">
      <h1 class="mb-2 mt-4 font-jost font-semibold lg:mb-2 lg:mt-0 lg:text-xl">Socials</h1>

      <div class="flex flex-row gap-4">
        <Social platform="facebook" username="AstroMikeMassimino" />
        <Social platform="instagram" username="astromikemassimino" />
        <Social platform="youtube" username="@mike_massimino" />
        <Social platform="linkedin" username="in/michael-massimino-550785178" />
        <Social platform="x" username="astro_mike" />
      </div>
    </div>

    <hr class="mx-auto my-5 w-36 border-lightgray lg:hidden" />

    <!-- Copyright/links -->
    <div class="pb-7 text-center font-jost lg:order-2 lg:pb-0 lg:text-lg">
      Â© <span id="footer-year">{year}</span> Astro Mike Media, LLC | All Rights Reserved
      <div class="mt-1 text-gray">
        <a href="/privacy-policy" class="underline">Privacy Policy</a> |
        <a href="/terms-of-use" class="underline">Terms of Use</a>
      </div>
    </div>
  </div>
</footer>

<script is:inline>
  document.getElementById("footer-year").innerText = new Date().getFullYear();
</script>
