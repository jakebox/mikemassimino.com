---
import GradientButton from "../components/GradientButton.astro";
import BasePageLayout from "./BasePageLayout.astro";
const { frontmatter } = Astro.props;
---

<BasePageLayout pageTitle={frontmatter.title}>
  <h1 class="my-5 text-center font-jost text-header lg:text-4xl xl:mt-12">
    {frontmatter.title}
  </h1>

  <hr class="mx-auto mb-5 w-40 border-lightgray xl:mb-8" />

  <div class="mx-auto max-w-96 lg:float-right lg:ml-4">
    <img src={frontmatter.coverImage} alt={frontmatter.coverImageAlt} class="rounded-lg" />
    <p class="pt-1 text-right italic">{frontmatter.coverImageAlt}</p>
  </div>
  <div class="markdown-content mt-4 space-y-4 font-roboto text-body text-gray md:text-lg lg:space-y-8 lg:px-16">
    <slot />
  </div>

  <GradientButton text="See all of Mike's books" link="/books" />
</BasePageLayout>

<style is:global>
  .markdown-content em {
    @apply font-sans;
  }

  .markdown-content h1 {
    @apply font-exo text-3xl text-red;
  }

  .markdown-content h1 > em {
    @apply font-exo;
  }

  .markdown-content h2 {
    @apply font-exo text-xl;
  }

  .markdown-content a {
    @apply text-orange;
  }

  .markdown-content ul {
    @apply list-disc px-5;
  }

  .markdown-content blockquote {
    @apply mx-8 border-l-2 border-l-dimmerwhite pl-4;
  }

  .markdown-content hr {
    @apply mx-auto max-w-20 border-lightgray;
  }
</style>
