---
import BasePageLayout from "./BasePageLayout.astro";
const { frontmatter } = Astro.props;
---

<BasePageLayout pageTitle={frontmatter.title}>
  <h1 class="text-header lg:text-4xl font-jost text-center my-5 xl:mt-12">{frontmatter.title}</h1>

  <hr class="w-40 mx-auto border-lightgray mb-5 xl:mb-8" />

  <div class="mx-auto max-w-96 lg:float-right lg:ml-4 xl:w-full xl:max-w-md">
    <img src={frontmatter.mainImage} alt={frontmatter.mainImageAlt} class="rounded-lg" />
    <p class="pt-1 italic text-right">{frontmatter.mainImageAlt}</p>
  </div>
  <div class="markdown-content font-roboto text-body md:text-lg text-gray space-y-4 lg:space-y-8 mt-4">
    <slot />
  </div>
</BasePageLayout>

<style is:global>
  .markdown-content em {
    @apply font-sans;
  }

  .markdown-content h1 {
    @apply text-3xl font-exo text-red;
  }

  .markdown-content h2 {
    @apply text-xl font-exo;
  }

  .markdown-content a {
    @apply text-orange;
  }
</style>
