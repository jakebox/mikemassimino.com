---
import BaseLayout from "../layouts/BaseLayout.astro";

import GradientButton from "../components/GradientButton.astro";
import OutlinedButton from "../components/OutlinedButton.astro";

import { Content as MeetMike } from "../meet_astro_mike.md";

const heroText = "Astronaut. Columbia Professor. Media Personality. Bestselling author. Explorer.";
---

<BaseLayout pageTitle="Home">
  <!-- Hero Section -->
  <section class="relative grid grid-cols-8 grid-rows-hero gap-y-5 bg-hero-gradient bg-cover items-center">
    <h2 class="col-span-8 row-span-2 text-center capitalize mt-8 text-white text-header font-exo leading-10">
      {heroText}
    </h2>

    <div class="col-span-4 col-start-4 row-start-3 row-span-1 align-middle mt-12">
      <GradientButton link="/" text="SPEAKING INFORMATION" />
    </div>

    <div class="col-span-4 col-start-5 row-span-1 row-start-4 z-10">
      <h3 class="text-white font-jost text-[36px] leading-[2.8rem]">Mike Massimino</h3>
    </div>

    <div class="col-span-5 row-span-2 col-start-1 row-start-5 -mb-24 relative">
      <img
        src="src/assets/mike/spaceman_cutout.png"
        alt="Mike Massimino headshot."
        class="absolute bottom-0 left-0 object-cover w-full max-w-96 md:w-max-w-3xl"
      />
    </div>
  </section>

  <!-- Meet Astro Mike -->
  <section class="flex flex-col md:flex-row mx-5 mt-5 md:gap-5 md:items-center">
    <div class="flex-1 md:w-1/2">
      <h2 class="font-exo text-header col-span-full text-red md:mb-3">Meet Astro Mike</h2>

      <div class="space-y-6 text-gray text-body font-['Roboto']">
        <MeetMike class="col-span-full" />
      </div>
    </div>

    <div class="flex flex-row md:flex-col w-full md:w-1/2 items-center outline outline-red gap-[12px] mt-5">
      <div class="w-1/2 md:w-full">
        <img src="src/assets/mike/image 8.png" class="outline outline-red" />
      </div>

      <!-- Buttons container -->
      <div class="flex flex-col gap-3 outline outline-red w-1/2">
        <GradientButton link="/" text="CONTACT MIKE" />
        <OutlinedButton link="/" text="FULL BIO" />
      </div>
    </div>
  </section>

